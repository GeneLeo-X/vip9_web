<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--修改web.xml配置文件的话，一定必须重启服务-->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>


    <servlet>
        <!--servlet-name : 起的名称是为了 servlet-mapping里面应用的-->
        <servlet-name>quick</servlet-name>
        <!-- servlet-class 配置的类 一定要是Servlet类-->
        <servlet-class>day03.QuickServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>quick</servlet-name>
        <!--路由/路径 -->
        <url-pattern>/quickServlet</url-pattern>

        <url-pattern>/quickServlet12</url-pattern>
    </servlet-mapping>
</web-app>